@import "nib"
@import "normalize.styl"
@import "icons.styl"
@import "grid-12.styl"
@import "colors.styl"
@import "scroll.styl"

vendor-prefixes = webkit o ms moz official

*
a
html
label
  font-family 'Open Sans'
  font-weight 300
  font-style normal

body
  background white
  color df_black

input
  border 0.1rem solid white

input[type=password]
input[type=search]
input[type=text]
  width 100%

  &.error
    border-bottom-left-radius 0.3rem
    border-left 0.3rem solid red_20
    border-top-left-radius 0.3rem
    
  &:focus
    outline none

nav
  background nst_orange
  color white
  
  h1
    line-height 3rem

  .icon-config
    color white
    display block
    font-size 3rem
    line-height 4.2rem
    text-align center
    text-decoration none

  .logo
    margin 0.6rem 0
    width 2.7rem

#createTask
  background white
  height 27.9rem

  input[type=checkbox]
    display none

  label
  p
    display block
    font-size 1.8rem
    line-height 3.5rem
    margin 0

  .client
  .description
  .selectedProject
    font-size 1.8rem
    line-height 3.5rem

  .description
    padding-left 0.2rem
    transition 0.3s
    
  .selectedProject
    display block
    text-decoration none

  .start
    display block
    font-size 5rem
    line-height 10rem
    text-align center
    text-decoration none
    transition 0.5s
   
    &.icon-start
      color c_blue

    &.icon-stop
      color red_40

  .time
    color orange_40
    font-size 5rem

#projectPicker
  .project
    background transparent

.checkbox
    height 3.5rem
    
    input[type=checkbox]:checked + label:before
      content "\e608"

    label
      cursor pointer
      display block
      position relative
      user-select none
      zoom 1

      &:before
        background-color white
        border 0.2rem solid c_blue
        color nst_orange
        content ""
        display block
        font-family 'tt-nst'
        font-size 2.1rem
        font-style normal
        font-variant normal
        font-weight normal
        height 2rem
        line-height 1
        line-height 2.2rem
        margin 0.5rem 0
        speak none
        text-transform none
        width 2rem
        zoom 1
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale
      
      &:hover:before
        transform scale(1.1)

.scroll::-webkit-scrollbar-thumb
  background orange_20

.scroll::-webkit-scrollbar-track-piece
  background orange_40