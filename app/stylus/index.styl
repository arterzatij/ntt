@import "nib"
@import "normalize.styl"
@import "icons.styl"
@import "grid-12.styl"
@import "colors.styl"
@import "scroll.styl"

vendor-prefixes = webkit o ms moz official

*
a
html
label
  font-family 'Open Sans'
  font-weight 300
  font-style normal

body
  background white
  color df_black

input
  border 0.1rem solid white

input[type=password]
input[type=search]
input[type=text]
  width 100%

  &.error
    border-bottom-left-radius 0.3rem
    border-left 0.3rem solid red_20
    border-top-left-radius 0.3rem
    
  &:focus
    outline none

nav
  background nst_orange
  color white
  
  h1
    line-height 3rem

  .icon-config
    color white
    display block
    font-size 3rem
    line-height 4.2rem
    text-align center
    text-decoration none

  .logo
    margin 0.6rem 0
    width 2.7rem

#createTask
  background white
  font-size 1.8rem
  height 27.9rem

  a
    text-decoration none

  p
    margin 0

  .client
  .selectedProject
    line-height 3.5rem

  .main
    margin-bottom 1rem

    .description
      font-size 1.8rem
      line-height 3.5rem
      padding-left 0.2rem
      transition 0.3s

    .start
      display block
      font-size 5rem
      line-height 10rem
      text-align center
      transition 0.5s
     
      &.icon-start
        color c_blue

      &.icon-stop
        color red_40

    .time
      color orange_40
      font-size 5rem

  .selectProject
    display block

#projectPicker
  background orange_40
  border 0.1rem solid orange_40
  position absolute
  right 150%
  transition 0.5s

  &.show
    right 0

  .projects
    font-size 1.6rem
    list-style none
    margin 0
    max-height 15rem
    min-height 15rem
    padding 1.2rem

    li
      margin 0.5rem 0

      .project
        color white

  .searchControl
    position relative
    
    .icon-delete
      position absolute
      right 0.4rem
      top 0.7rem
    
    .term
      font-size 1.8rem
      padding 0.5rem 2.2rem 0.5rem 0.5rem  

.checkbox
    height 3.5rem

    input[type=checkbox]
      display none

      &:checked + label:before
        content "\e608"

    label
      cursor pointer
      display block
      font-size 1.8rem
      line-height 3.5rem
      padding-left 2.8rem
      position relative
      user-select none
      zoom 1

      &:before
        background-color white
        border 0.2rem solid c_blue
        color nst_orange
        content ""
        display inline-block
        font-family 'tt-nst'
        font-size 1.8rem
        font-style normal
        font-variant normal
        font-weight normal
        height 1.8rem
        left 0
        line-height 1
        margin .5rem 0.2rem
        position absolute
        speak none
        text-transform none
        transition 0.3s
        width 1.8rem
        zoom 1
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale
      
      &:hover:before
        transform scale(1.1)

.scroll::-webkit-scrollbar-thumb
  background orange_20

.scroll::-webkit-scrollbar-track-piece
  background orange_40